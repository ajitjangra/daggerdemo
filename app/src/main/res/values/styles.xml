<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="LabelRobotoThinWhite54px">
    <item name="android:fontFamily">@font/roboto_thin</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/sp_54</item>
  </style>

  <style name="LabelRobotoThinBlue36px">
    <item name="android:fontFamily">@font/roboto_thin</item>
    <item name="android:textColor">@color/blue_100</item>
    <item name="android:textSize">@dimen/sp_36</item>
  </style>

  <style name="LabelRobotoRegularBlack16px">
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textColor">@color/black_100</item>
    <item name="android:textSize">@dimen/sp_16</item>
  </style>

  <style name="LabelRobotoBlackBlack96px">
    <item name="android:fontFamily">@font/roboto_black</item>
    <item name="android:textColor">@color/black_100</item>
    <item name="android:textSize">@dimen/sp_96</item>
  </style>

</resources>
